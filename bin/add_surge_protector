import argparse
import requests
import sys

nacl_url = "http://127.0.0.1:5000/devices/add_surge_protector"

# Parse command line arguments
parser = argparse.ArgumentParser (description = 'Add a Surge Protector device to netbox')
parser.add_argument ('site', help = "Site, where device should be added.")
parser.add_argument ('name', help = 'Name of the new device')

args = parser.parse_args ()

data = {
	'name' : args.name,
	'site' : args.site
}

res = requests.post (nacl_url, data = data)
if res.status_code != 200:
	print ("FAILED: %s" % res.text)
	sys.exit (1)
